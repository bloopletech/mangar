<li id="<%= dom_id book %>">
  <span class="pages <% if book.pages >= 50 %>long<% end %>"><%= book.pages %></span>
  <%= link_to_remote(image_tag(book.preview.url) + "<span class='title'>#{h book.title}</span>", :url => book_url(book), :method => 'get') %>
  <div class="more_info">
    <span class='opens'><%= book.opens %></span> O <%= link_to_remote("X", :url => book_url(book), :method => 'delete', :confirm => "Are you sure you want to delete #{book.title}?") %>
    <!-- on hover show delete icon, create / published date. -->
  </div>
  <div class="tags">
    <div class="tag_list"><%= h book.tag_list %></div>
    <% remote_form_for book do |f| %>
      <%= f.text_field :tag_list, :class => 'input' %>
    <% end %>
  </div>
</li>