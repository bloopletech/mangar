<li id="<%= dom_id book %>">
  <div class="wrapper">
    <%
    many_opens = book.opens >= 10
    many_pages = book.pages >= 50
    %>
    <% if many_opens || many_pages %>
      <div class="emblems">
        <% if many_opens %><%= image_tag("icons/award_star_bronze_1.png", :title => "Has been read 10 or more times.") %><% end %>
        <% if many_pages %><%= image_tag("icons/book.png", :title => "Has 50 or more pages") %><% end %>
      </div>
    <% end %>
    <%= link_to(image_tag("icons/delete.png", :title => 'Delete this book'), book_url(book), :method => 'delete', :confirm => "Are you sure you want to delete #{book.title}?", :remote => true, :class => 'delete') %>
    <%= link_to(image_tag(book.preview.url) + raw("<span class='title'>#{h book.title}</span>"), book_url(book), :method => 'get', :remote => true) %>
    <div class="more_info">
      <%= image_tag("icons/page_white.png", :title => "Pages") %> <%= book.pages %>&nbsp;&nbsp;
      <%= image_tag("icons/application_go.png", :title => "Opens") %> <span class="opens"><%= book.opens %></span><br>
      Added: <%= book.created_at %><br>
      Published: <%= book.published_on %><br>
    </div>
    <div class="tags">
      <div class="tag_list"><%= h book.tag_list %></div>
      <%= form_for book, :remote => true do |f| %>
        <%= f.text_field :tag_list, :class => 'input' %>
      <% end %>
    </div>
  </div>
</li>