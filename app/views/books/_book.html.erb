<li id="<%= dom_id book %>">
  <div class="emblems">
    <% if book.opens >= 10 %><%= image_tag("icons/award_star_bronze_1.png", :title => "Has been read 10 or more times.") %><% end %>
    <% if book.pages >= 50 %><%= image_tag("icons/book.png", :title => "Has 50 or more pages") %><% end %>
  </div>
  <%= link_to(image_tag(book.preview.url) + raw("<span class='title'>#{h book.title}</span>"), book_url(book), :method => 'get', :remote => true) %>
  <div class="more_info">
    <%= image_tag("icons/page_white.png", :title => "Pages") %> <%= book.pages %>&nbsp;&nbsp;
    <%= image_tag("icons/application_go.png", :title => "Opens") %> <span class="opens"><%= book.opens %></span><br>
    Added: <%= book.created_at %><br>
    Published: <%= book.published_on %><br>
    
    <%= link_to("X", book_url(book), :method => 'delete', :confirm => "Are you sure you want to delete #{book.title}?", :remote => true) %>
  </div>
  <div class="tags">
    <div class="tag_list"><%= h book.tag_list %></div>
    <%= form_for book, :remote => true do |f| %>
      <%= f.text_field :tag_list, :class => 'input' %>
    <% end %>
  </div>
</li>