<li id="<%= dom_id book %>">
  <div class="emblems">
    <% if book.opens >= 10 %><%= image_tag("icons/award_star_bronze_1.png", :title => "Has been read 10 or more times.") %><% end %>
    <% if book.pages >= 50 %><%= image_tag("icons/book.png", :title => "Has 50 or more pages") %><% end %>
  </div>
  <%= link_to_remote(image_tag(book.preview.url) + "<span class='title'>#{h book.title}</span>", :url => book_url(book), :method => 'get') %>
  <div class="more_info">
    <%= image_tag("icons/page_white.png", :title => "Pages") %> <%= book.pages %>&nbsp;&nbsp;
    <%= image_tag("icons/application_go.png", :title => "Opens") %> <%= book.opens %><br>
    Added: <%= book.created_at %><br>
    Published: <%= book.published_on %><br>
    
    <%= link_to_remote("X", :url => book_url(book), :method => 'delete', :confirm => "Are you sure you want to delete #{book.title}?") %>
    <!-- on hover show delete icon, create / published date. -->
  </div>
  <div class="tags">
    <div class="tag_list"><%= h book.tag_list %></div>
    <% remote_form_for book do |f| %>
      <%= f.text_field :tag_list, :class => 'input' %>
    <% end %>
  </div>
</li>