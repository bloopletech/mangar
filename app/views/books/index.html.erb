<div id="header">
  <div id="import_and_update">
    <%= link_to("Import and Update", import_and_update_books_path) %>
  </div>

  <% form_remote_tag :url => { :action => 'index' }, :method => 'get', :html => { :id => 'search_form' } do %>
    <%= text_field_tag 'tag' %>
    <%= select_tag 'sort', options_for_select([['Published', 'published_at'], ['Pages', 'pages'], ['Opens', 'opens']]) %>
    <%= select_tag 'sort_direction', options_for_select([['Descending', 'DESC'], ['Ascending', 'ASC']]) %>
  <% end %>
  <%= observe_form("search_form", :frequency => 0.5) %>
</div>

<div class="clear"></div>
<ul id="books">
  <% @books.each do |b| %>
    <%= render :partial => 'book', :locals => { :book => b } %>
  <% end %>
</ul>
<div class="clear"></div>