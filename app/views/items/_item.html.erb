<li id="<%= dom_id item %>" class="page_<%= @items.current_page %> <%= item.class.name.downcase %>">
  <div class="wrapper">
    <%
    many_opens = item.opens >= 10
    many_pages = item.pages >= 50
    %>
    <% if many_opens || many_pages %>
      <div class="emblems">
        <% if many_opens %><%= image_tag("icons/award_star_bronze_1.png", :title => "Has been read 10 or more times.") %><% end %>
        <% if many_pages %><%= image_tag("icons/book.png", :title => "Has 50 or more pages") %><% end %>
      </div>
    <% end %>
      <div class="actions">
        <%= link_to(image_tag("icons/zoom.png", :title => "More information about this item"),
        more_info_item_path(item), :class => 'colorbox') %><%#= image_tag("icons/" + if item.win?
        #  "thumbs_up.png"
        #elsif item.fail?
        #  "thumbs_down.png"
        #else
        #  "shading.png"
        #end) %><%= link_to(image_tag("icons/delete.png", :title => 'Delete this item'), item_path(item), :method => 'delete', :confirm => "Are you sure you want to delete #{item.title}?", :remote => true) %>
    </div>
    <%= link_to(image_tag(item.preview.thumbnail.url), send("#{item.type.downcase}_path", item), :target => '_blank') %>
    <div class="info-wrapper">
      <div class="info">
        <%= item_title(item, true) %>
        <div class="tag_list"><%= h item.tag_list %></div>
        <%= form_for item.becomes(Item), :remote => true do |f| %>
          <%= f.text_field :tag_list, :class => 'input' %>
        <% end %>
        <%= image_tag("icons/page_white.png", :title => "Pages") %> <%= item.pages %>&nbsp;&nbsp;
        <%= image_tag("icons/application_go.png", :title => "Opens") %> <span class="opens"><%= item.opens %></span><br>
      </div>
    </div>
  </div>
</li>
